@model Tutorial

@{
    ViewBag.Title = "Create Tutorial";
}

<form class="mt-3" method="post" asp-controller="Tutorial" asp-action="EditTutorial">
    <input hidden="" asp-for="Id"/>
    <div class="form-group">
        <label asp-for="Name">Name</label>
        <input class="form-control" placeholder="Name" asp-for="Name" />
        <span class="text-danger" asp-validation-for="Name"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description">Description</label>
        <input class="form-control" asp-for="Description"/>
        <span class="text-danger" asp-validation-for="Description"></span>
    </div>
    <div class="form-group mt-3">
        <button class="btn btn-primary" type="submit">Submit</button>
        <a class="btn btn-primary" asp-controller="Tutorial" asp-action="Index">Cancel</a>
    </div>
</form>
